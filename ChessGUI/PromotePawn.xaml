<Window x:Class="ChessGUI.PromotePawn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChessGUI"
        mc:Ignorable="d"
        Title="PromotePawn" Height="185" Width="104">
    <Grid>
        <ListBox HorizontalAlignment="Center" Height="142" VerticalAlignment="Center" Width="104">
            <Button Content="Queen" Click="Button_Click"/>
            <Button Content="Bishop" Click="Button_Click"/>
            <Button Content="Rook" Click="Button_Click"/>
            <Button Content="Knight" Click="Button_Click"/>
        </ListBox>

    </Grid>
</Window>
